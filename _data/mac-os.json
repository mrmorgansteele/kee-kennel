      "section_title": "General",
      "shortcuts": [
        {
          "operation": "Change Workspaces",
          "actions": [
            {
              "keys": "Control (^) + Left Arrow (←)",
              "outcome": "Change Workspaces left"
            },
            {
              "keys": "Control (^) + Right Arrow (→)",
              "outcome": "Change Workspaces right"
            }
          ]
        },
        {
          "actions": [
            {
              "keys": "Control (^) + Up Arrow (↑)",
              "outcome": "Mission Control enter or leave (ie. all open windows on current desktop)"
            }
          ]
        },
        {
          "actions": [
            {
              "keys": "Control (^) + Down Arrow (↓)",
              "outcome": "Show all open windows for the current app"
            }
          ]
        }
      ]
    },
    {
      "section_title": "VoiceOver",
      "shortcuts": [
        {
          "operation": "Turn VoiceOver on",
          "actions": [
            {
              "keys": "Touch ID x3",
              "outcome": "Brings up a menu to turn on multiple Accessibility features"
            },
            {
              "keys": "Command (⌘) + F5",
              "outcome": "Turn on VoiceOver"
            }
          ]
        },
        {
          "operation": "Select",
          "actions": [
            {
              "keys": "Control (^) + Option (⌥) + Space (_)",
              "outcome": "Select Focused Item"
            },
            {
              "keys": "Control (^) + Option (⌥) + Shift (⇧) + Up Arrow (↑)",
              "outcome": "Exit Selection (ie. move up)"
            }
          ]
        }
      ]
    },
    {
      "section_title": "Spotlight Search",
      "shortcuts": [
        {
          "operation": "Browse More Locations",
          "actions": [
            {
              "keys": "Command (⌘) + 1",
              "outcome": "Search Applications"
            },
            {
              "keys": "Command (⌘) + 2",
              "outcome": "Search Files"
            },
            {
              "keys": "Command (⌘) + 3",
              "outcome": "Search Actions"
            },
            {
              "keys": "Command (⌘) + 4",
              "outcome": "Search Clipboard"
            }
          ]
        }
      ]
    },
    {
      "section_title": "Screenshots",
      "shortcuts": [
        {
          "operation": "Taking Screenshots",
          "actions": [
            {
              "keys": "Shift (⇧) + Command (⌘) + 3",
              "outcome": "Screenshot Entire Screen"
            },
            {
              "keys": "Shift (⇧) + Command (⌘) + 4",
              "outcome": "Screenshot Selection"
            },
            {
              "keys": "Shift (⇧) + Command (⌘) + 4 + Space (_)",
              "outcome": "Screenshot Window"
            }
          ]
        }
      ]
    }
  ]
